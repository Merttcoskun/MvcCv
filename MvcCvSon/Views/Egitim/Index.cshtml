@using MvcCvSon.Models.entity
@model List<TBL_EGITIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.BASLIK</td>
            <td>@x.ALTBASLIK1</td>
            <td>@x.ALTBASLIK2</td>
            <td>@x.GNO</td>
            <td>@x.TARIH</td>
            <td>
                <a class="btn btn-danger btn-sm" href="Egitim/egitimsil/@x.ID">
                    <i class="fas fa-trash">
                    </i>
                    Sil
            </td>
            <td>
                <a class="btn btn-info btn-sm" href="/Egitim/egitimduzenle/@x.ID">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
            </td>

        </tr>
    }
</table>

<a href="/Egitim/egitimekle/" class="btn btn-primary">Yeni Eğitim Bilgisi Ekle</a>


